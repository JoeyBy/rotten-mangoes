
<%= form_for([:admin, @user], :html => {:class => "form"} ) do |f| %>
  <div class="form-group col-xs-4">
    <%= f.label "email" %>
    <%= f.text_field "email", class:"form-control" %>
    </div>
  </div>
  <div class="form-group col-xs-4">
    <%= f.label "firstname", "First Name" %><br>
    <%= f.text_field "firstname", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "lastname", "Last Name" %><br>
    <%= f.text_field "lastname", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "admin?" %> <br>
    <%= f.check_box :admin, class:"form-control" %>
  </div>  
  <div ><%= f.submit "Submit", class:"btn btn-default" %></div>
  <div> 
    <%= link_to "Delete User", @user, method: :delete %> 
  </div>
<% end %>